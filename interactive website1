/project-folder
  ├── index.html
  ├── styles.css
  ├── script.js

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Web Page</title>
    <link rel="stylesheet" href="styles.css"> <!-- Link to CSS -->
</head>
<body>
    <header>
        <h1>Welcome to My Interactive Website</h1>
        <p>This is a simple webpage with a clickable button that shows an alert.</p>
        <button id="myButton">Click Me</button>
    </header>

    <script src="script.js" defer></script> <!-- Link to JavaScript -->
</body>
</html>

/* General body styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

/* Header styles */
header {
    text-align: center;
    padding: 20px;
    background-color: #008CBA;
    color: white;
}

/* Heading styles */
h1 {
    font-size: 2.5em;
    margin-bottom: 10px;
}

/* Paragraph styles */
p {
    font-size: 1.2em;
    margin-bottom: 20px;
}

/* Button styles */
button {
    background-color: #008CBA;
    color: white;
    padding: 10px 20px;
    font-size: 1.2em;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}

button:hover {
    background-color: #005f6a;
}

// JavaScript to add interactivity
document.getElementById('myButton').addEventListener('click', function() {
    alert('Button Clicked! Welcome to the interactive webpage!');
});

